{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "declaration": true,
        "declarationMap": false,
        "emitDeclarationOnly": false,
        "sourceMap": false,
        "skipLibCheck": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "lib": ["ES2020", "DOM"]
    },
    "include": ["src"]
}
